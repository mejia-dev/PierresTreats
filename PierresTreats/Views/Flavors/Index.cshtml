@{
  Layout = "_Layout";
}

@using PierresTreats.Models;

<div class="bodyColumnA">
  <p>@Html.ActionLink("Home", "Index", "Home")</p>
  <p>@Html.ActionLink("Add New Flavor", "Create")</p>
</div>

<div class="bodyColumnB">
  <h2>@ViewBag.PageTitle</h2>
  @if (@Model.Count == 0)
  {
    <p class="error">No flavors have been added yet.</p>
  } 

  @foreach (Flavor flvr in Model)
  {
    <li>@Html.ActionLink($"{flvr.FlavorName}", "Details", new { id = flvr.FlavorId })</li>
  }
</div>